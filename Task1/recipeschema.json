{
    "schema": "https://json-schema.org/draft-04/schema#",
    "title": "Receipes",
    "description": "A list of Receipes",
    "type": "object",
        "properties":{
            "recipes": {
                "type":"array",
                "items": {
                    "type": "object",
                        "properties": {
                            "id" : { "type": "integer"},
                            "name": { "type": "string" },
                            "prep": { "type": "string"},
                            "cook": { "type": "string"},
                            "serves": { "type": "integer"},
                            "desc": { "type": "string"},
                            "ingredients": { 
                                "type": "array",
                                "items": {
                                     "type": "string"
                                    
                                }
                            },
                            "nutrition":{
                                "type":"object",
                                "properties":{
                                    "kcal": { "type": "integer"},
                                    "fat":  { "type": "string"},
                                    "saturates":  { "type": "string"},
                                    "carbs":  { "type": "string"},
                                    "sugars":  { "type": "string"},
                                    "fibre":  { "type": "string"},
                                    "protein":  { "type": "string"},
                                    "salt":  { "type": "string"}
                                }
                            }
                        }
                }
            }
        }
}